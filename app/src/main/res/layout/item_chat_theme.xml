<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginBottom="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="312dp"
    android:layout_height="196dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:background="@drawable/layout_chat_theme_image"
            android:id="@+id/theme_image"
            android:src="@drawable/ic_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
        <View
            android:background="@drawable/layout_chat_theme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:textStyle="bold"
            android:id="@+id/theme_title"
            android:textSize="32sp"
            android:textColor="@color/colorSub"
            android:text="#병원"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/theme_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/theme_title"
            android:layout_centerHorizontal="true"
            android:text="일상적인 의사와 환자 간의 대화를 학습합니다."
            android:textColor="@color/colorSub"
            android:textSize="12sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>
</LinearLayout>