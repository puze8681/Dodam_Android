<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RegisterActivity">
    <data>
        <variable
            name="register"
            type="kr.puze.dodam.RegisterActivity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/register_button_cancel"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_clear_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:layout_marginLeft="4dp"
                android:textColor="#222222"
                android:text="회원가입"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:textColor="#222222"
                android:text="도담도담 서비스에 회원가입하기 위해선\n아래 정보를 입력하셔야 합니다."
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="이름(실명)"
                android:textColor="#222222"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:backgroundTint="@color/colorMain"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:id="@+id/register_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="실명을 입력해주세요"
                tools:ignore="RtlCompat" />

            <TextView
                android:text="이메일"
                android:textColor="#222222"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:backgroundTint="@color/colorMain"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:id="@+id/register_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="example@example.com"
                tools:ignore="RtlCompat" />

            <TextView
                android:text="비밀번호"
                android:textColor="#222222"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:backgroundTint="@color/colorMain"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:id="@+id/register_edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="비밀번호를 입력해주세요."
                tools:ignore="RtlCompat" />

            <TextView
                android:text="비밀번호 확인"
                android:textColor="#222222"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:backgroundTint="@color/colorMain"
                android:textSize="14sp"
                android:textAlignment="textStart"
                android:id="@+id/register_edit_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="다시 한번 입력해주세요."
                tools:ignore="RtlCompat" />
        </LinearLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:background="@color/colorMain"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:id="@+id/register_button_register"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:text="다음"/>
    </RelativeLayout>
</layout>