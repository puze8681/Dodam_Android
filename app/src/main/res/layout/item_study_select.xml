<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data_study_select"
            type="kr.puze.dodam.Data.StudySelectData"/>
    </data>
    <android.support.constraint.ConstraintLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            tools:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/data_study_select_image"
            android:src="@{data_study_select.setimg()}"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/data_study_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data_study_select.title, default=title"
            app:layout_constraintStart_toEndOf="@+id/data_study_select_image"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/data_study_select_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data_study_select.subTitle, default=sub_title"
            app:layout_constraintStart_toEndOf="@+id/data_study_select_image"
            app:layout_constraintTop_toBottomOf="@id/data_study_select_title" />
    </android.support.constraint.ConstraintLayout>
</layout>